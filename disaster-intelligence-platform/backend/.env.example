# Backend Environment Variables

# Application
DEBUG=false
ENVIRONMENT=production

# Database
DATABASE_URL=postgresql://disaster:disaster@localhost:5432/disaster_db
POSTGRES_USER=disaster
POSTGRES_PASSWORD=disaster
POSTGRES_DB=disaster_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# ─── Twilio (SMS / WhatsApp Alerts) ────────────────────────────────────────
# Get these from https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
# Your Twilio phone number for SMS (must be SMS-capable)
TWILIO_SMS_FROM=+1XXXXXXXXXX
# For WhatsApp: use Twilio Sandbox number (format: whatsapp:+14155238886)
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
