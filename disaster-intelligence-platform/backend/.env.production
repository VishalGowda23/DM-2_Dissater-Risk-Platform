# ===================================
# Disaster Intelligence Platform
# Production Environment Configuration
# ===================================

# Application
APP_NAME=Disaster Intelligence Platform
APP_VERSION=2.0.0
ENVIRONMENT=production
DEBUG=false

# Database (PostGIS)
DATABASE_URL=postgresql://disaster:disaster@db:5432/disaster_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_TTL_DEFAULT=300

# JWT Authentication
SECRET_KEY=change-this-to-a-cryptographically-secure-random-string-at-least-64-chars
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Default Admin
DEFAULT_ADMIN_USER=admin
DEFAULT_ADMIN_PASSWORD=admin-change-me-in-production
DEFAULT_ADMIN_EMAIL=admin@disaster-intelligence.local

# CORS (comma-separated origins)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8080"]

# Weather API (Open-Meteo)
WEATHER_API_URL=https://api.open-meteo.com/v1/forecast
WEATHER_ARCHIVE_URL=https://archive-api.open-meteo.com/v1/archive

# OSM (Overpass API)
OVERPASS_API_URL=https://overpass-api.de/api/interpreter

# DEM Processing
SRTM_DATA_DIR=./data/srtm

# Risk Weights
ML_COMPOSITE_WEIGHT=0.60
ML_MODEL_WEIGHT=0.40

# Alert Thresholds
DELTA_SURGE_THRESHOLD=20
DELTA_CRITICAL_THRESHOLD=40
RISK_LOW_THRESHOLD=25
RISK_MODERATE_THRESHOLD=50
RISK_HIGH_THRESHOLD=75

# Spillover
NEIGHBOR_SPILLOVER_PCT=5.0
NEIGHBOR_RISK_THRESHOLD=75.0

# Background Jobs
WEATHER_INGEST_INTERVAL_MIN=15
RISK_RECOMPUTE_INTERVAL_MIN=30
DATA_CLEANUP_HOUR=2
